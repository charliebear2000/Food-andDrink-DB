<article>
    <a class="cyan-text text-darken-3" href="./dashboard.handlebars"> &larr; Back to My Pantry</a>
    <h2 class="cyan-text text-darken-3">
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <input class="cyan-text text-darken-3" name="post-title" type="text" value="{{post.title}}" />
            <span> ({{format_url post.post_url}})</span>
        </div>
        <div>
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
        <button type="submit" class="waves-effect waves-light btn z-depth-4">Save Post</button>
        <button type="button" class="delete-post-btn waves-effect waves-light btn z-depth-4">Delete Post</button>
    </form>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit" class="waves-effect waves-light btn z-depth-4">Add Comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/javasscript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/public/javascript/comment.js"></script>