<!-- Page for user to delete their own recipes/post -->
<article class="delete-post">
    <a class="post-color2 bck" href="/dashboard"> &larr; Back to My Pantry</a>
    <h4>
        Are you sure you want to delete this recipe?
    </h4>
    <div class="recipe-info">
        <input class="post-color" name="post-title" type="text" value="{{post.title}}" />
        <span> ({{format_url post.post_url}})</span>
    </div>
    <div class="recipe-info">
        <a class="post-color2" href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment"
            post.comments.length}}</a>
    </div>
    <button type="button" class="delete-post-btn waves-effect waves-light btn z-depth-4">Delete Post</button>
</article>

<script src="/javascript/delete-post.js"></script>